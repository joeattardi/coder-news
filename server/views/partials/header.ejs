<header>
  <div class="logo"><a href="/"><img src="/images/header.png" /></a></div>

  <% if (locals.user) { %>
    <span class="username"><i class="fa fa-user"></i> <%= user.username %></span>
    <button onclick="location.href='/submit'"><i class="fa fa-plus"></i> Submit a link</button>
    <button onclick="location.href='/logout'"><i class="fa fa-sign-out"></i> Log out</button>
  <% } else { %>
    <button onclick="location.href='/signup'">Sign up</button>
    <button onclick="location.href='/login'"><i class="fa fa-sign-in"></i> Log in</button>
  <% } %>
</header>

